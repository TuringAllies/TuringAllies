<div class="flex flex-col border">
  <div>
    <%= link_to "add an employer", root_path %>
  </div>
  <h1 class="font-bold text-4xl">Employers</h1>
  <div id="table">
    <table class="table-auto">
      <thead>
        <tr>
          <th>Employer Name</th>
          <th>City</th>
          <th><%= link_to "State", sort: "state" %>State</th>
          <th>Website</th>
          <th>Industry</th>
          <th># of Employees</th>
        </tr>
      </thead>
      <tbody>
        <% @employers.each do |employer| %>
          <tr>
            <td><%= employer.name %></td>
            <td><%= employer.city %></td>
            <td><%= employer.state %></td>
            <td><%= link_to "#{employer.website}", employer.website %></td>
            <td><%= employer.industry %></td>
            <td><%= employer.employees %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
